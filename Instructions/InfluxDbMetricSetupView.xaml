<UserControl
    x:Class="DaleGhent.NINA.InfluxDbExporter.Instructions.InfluxDbMetricSetupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="clr-namespace:NINA.Core.Enum;assembly=NINA.Core"
    xmlns:localenum="clr-namespace:DaleGhent.NINA.InfluxDbExporter.Enums"
    xmlns:local="clr-namespace:DaleGhent.NINA.InfluxDbExporter.Instructions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary"
    xmlns:util="clr-namespace:NINA.Core.Utility;assembly=NINA.Core"
    d:DataContext="{d:DesignInstance Type=local:InfluxDbMetricSetup}"
    Name="UC"
    d:DesignHeight="400"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Width="600">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="10,8,10,20"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Text="Description" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                MinWidth="500"
                MaxWidth="500"
                Margin="10,8,10,20"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                HorizontalScrollBarVisibility="Auto"
                MaxLines="1"
                Text="{Binding MeasurementDescription}"
                TextWrapping="NoWrap" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,2,10,2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Text="Measurement" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                MinWidth="200"
                MaxWidth="200"
                Margin="10,2,10,2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                HorizontalScrollBarVisibility="Auto"
                MaxLines="1"
                Text="{Binding MeasurementName}"
                TextAlignment="Left"
                TextWrapping="NoWrap" />
        </Grid>

        <GroupBox
            Margin="0,10,0,0"
            HorizontalAlignment="Left">
            <GroupBox.Header>
                <TextBlock
                    Margin="5,2,5,2"
                    FontSize="14"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Text="Values" />
            </GroupBox.Header>
            <StackPanel Orientation="Vertical">
                <DataGrid
                    MaxHeight="300"
                    HeadersVisibility="Column"
                    VerticalScrollBarVisibility="Auto"
                    ItemsSource="{Binding MeasurementEntities}"
                    SelectedItem="{Binding SelectedEntity, Mode=TwoWay}"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False">

                    <DataGrid.Columns>
                        <DataGridTemplateColumn
                        CanUserSort="False"
                        CanUserReorder="False"
                        Header="Type"
                        MinWidth="100"
                        Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                    Margin="2,0,2,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Type}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <ComboBox
                                    Margin="2,0,2,0"
                                    VerticalAlignment="Center"
                                    ItemsSource="{Binding Source={util:EnumBindingSource {x:Type localenum:MetricEntityTypes}}}"
                                    SelectedItem="{Binding Type, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                        CanUserSort="False"
                        CanUserReorder="False"
                        Header="Name"
                        MinWidth="150"
                        Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                    Margin="2,0,2,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Name}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox
                                    Margin="2,0,2,0"
                                    VerticalAlignment="Center"
                                    TextAlignment="Justify"
                                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                        Header="Value"
                        CanUserSort="False"
                        CanUserReorder="False"
                        Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                    Margin="2,0,2,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Value}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox
                                    Margin="2,0,2,0"
                                    VerticalAlignment="Center"
                                    TextAlignment="Justify"
                                    Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Button
                    Content="Add"
                    FontSize="14"
                    Width="80"
                    Margin="0,0,8,0"
                    Command="{Binding AddEntityRowCommand}" />

                    <Button
                    Content="Remove Selected"
                    FontSize="14"
                    Margin="10,0,0,0"
                    Width="130"
                    Command="{Binding RemoveEntityRowCommand}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                Content="Close"
                Grid.Row="1"
                Width="150"
                Margin="10,10,10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                util:ButtonHelper.DialogResult="True"
                IsDefault="True" />
        </Grid>
    </StackPanel>
</UserControl>